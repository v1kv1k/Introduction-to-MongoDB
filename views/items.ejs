<h1 class="mt-4">Items from MongoDB Atlas</h1>
<p class="lead mb-3">Welcome <%= name %></p>

<div class="row">
  <% if(items.length > 0) { %>
    <% items.forEach(function(item) { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <p class="card-text"><%= item.description %></p>
            <% if(item.category) { %>
              <p class="card-text"><small class="text-muted">Category: <%= item.category %></small></p>
            <% } %>
            <% if(item.price) { %>
              <p class="card-text"><small class="text-muted">Price: $<%= item.price.toFixed(2) %></small></p>
            <% } %>
            <a href="/data/<%= item._id %>" class="btn btn-primary">View Details</a>
          </div>
          <div class="card-footer text-muted">
            Added: <%= item.date.toLocaleDateString() %>
          </div>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <div class="col-md-12">
      <div class="alert alert-info" role="alert">
        No items found in the database. Please add some items to MongoDB Atlas.
      </div>
    </div>
  <% } %>
</div> 